model ExpenseGroup {
  id              String    @id @default(uuid())
  userId          String    // Cr√©ateur du groupe
  user            User      @relation("UserExpenseGroups", fields: [userId], references: [id], onDelete: Cascade)
  
  name            String    // Nom du groupe (ex: "Voyage √† Paris")
  description     String?   // Description
  currency        String    @default("EUR") // Devise: EUR, USD, CAD, etc.
  archived        Boolean   @default(false) // Groupe archiv√©
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  members         ExpenseGroupMember[]
  expenses        Expense[]
  
  @@index([userId])
  @@map("expense_groups")
}

model ExpenseGroupMember {
  id              String    @id @default(uuid())
  groupId         String
  group           ExpenseGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  userId          String?   // Null si membre externe (pas un utilisateur)
  user            User?     @relation("UserExpenseGroupMembers", fields: [userId], references: [id], onDelete: Cascade)
  
  name            String    // Nom du membre (rempli automatiquement si userId existe)
  email           String?   // Email du membre
  
  joinedAt        DateTime  @default(now())
  
  paidExpenses    Expense[] @relation("ExpensePaidBy")
  receivedTransfers Expense[] @relation("ExpenseToMember")
  participations  ExpenseParticipant[]
  
  @@unique([groupId, userId])
  @@index([groupId])
  @@index([userId])
  @@map("expense_group_members")
}

model Expense {
  id              String    @id @default(uuid())
  groupId         String
  group           ExpenseGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  type            String    @default("expense") // Type: 'expense', 'income', 'transfer'
  
  paidById        String    // Pour expense: qui a pay√©, pour income: qui re√ßoit, pour transfer: qui donne
  paidBy          ExpenseGroupMember @relation("ExpensePaidBy", fields: [paidById], references: [id])
  
  toMemberId      String?   // Pour transfer: vers qui va l'argent
  toMember        ExpenseGroupMember? @relation("ExpenseToMember", fields: [toMemberId], references: [id])
  
  description     String    // Description de la transaction
  amount          Float     // Montant total
  date            DateTime  @default(now()) // Date de la transaction
  category        String?   // Cat√©gorie: Transport, Logement, Nourriture, etc.
  photos          String?   // JSON array des chemins des photos
  splitMode       String?   // Mode de division: 'equal', 'shares', 'manual'
  shares          String?   // JSON object des parts par participant (ex: {"memberId": 2})
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  participants    ExpenseParticipant[]
  
  @@index([groupId])
  @@index([paidById])
  @@index([date])
  @@map("expenses")
}

model ExpenseParticipant {
  id              String    @id @default(uuid())
  expenseId       String
  expense         Expense   @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  
  memberId        String
  member          ExpenseGroupMember @relation(fields: [memberId], references: [id], onDelete: Cascade)
  
  share           Float     // Part de cette personne dans la d√©pense
  
  @@unique([expenseId, memberId])
  @@index([expenseId])
  @@index([memberId])
  @@map("expense_participants")
}

