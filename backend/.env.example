# Configuration de la base de données PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/maccam_db?schema=public"

# Configuration du serveur
PORT=5000
NODE_ENV=development

# JWT Secret (générer une clé sécurisée en production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d

# CORS Origins (frontend URL)
CORS_ORIGIN=http://localhost:3000

# ================================
# SIGNATURE ÉLECTRONIQUE BELGE
# ================================

# 1. Belgium eID (Carte d'identité électronique)
# -------------------------------------------
# URL du middleware eID local (installé sur le poste utilisateur)
# Téléchargement : https://eid.belgium.be/fr
EID_MIDDLEWARE_URL=http://localhost:15051

# 2. itsme® (Signature mobile)
# -------------------------------------------
# Inscription partenaire : https://www.itsme.be/entreprises
# Partner Portal : https://partner.itsme.be
# Documentation : https://brand.belgianmobileid.be/d/CX5YsAKEmVI7

# Client ID fourni par itsme après inscription
ITSME_CLIENT_ID=your_itsme_client_id_here

# Client Secret fourni par itsme
ITSME_CLIENT_SECRET=your_itsme_client_secret_here

# URL de callback OAuth2 (à déclarer dans le Partner Portal)
# Production : https://votredomaine.com/api/v1/pdf-sign/itsme/callback
ITSME_REDIRECT_URI=http://localhost:5000/api/v1/pdf-sign/itsme/callback

# Environnement : 'sandbox' pour tests, 'production' pour prod
ITSME_ENV=sandbox

# 3. CSAM / MyGov.be (Signature gouvernementale)
# -------------------------------------------
# Réservé aux administrations publiques belges
# Contact BOSA : iam@bosa.fgov.be
# Documentation : https://www.belgif.be

# Client ID CSAM (fourni par BOSA après validation)
CSAM_CLIENT_ID=your_csam_client_id_here

# Client Secret CSAM
CSAM_CLIENT_SECRET=your_csam_client_secret_here

# URL de callback OAuth2 (à enregistrer dans IAM Portal)
# Production : https://votredomaine.gov.be/api/v1/pdf-sign/csam/callback
CSAM_REDIRECT_URI=http://localhost:5000/api/v1/pdf-sign/csam/callback

# Environnement : 'acceptance' pour tests, 'production' pour prod
CSAM_ENV=acceptance

# Session secret (requis pour OAuth2 state storage en production)
SESSION_SECRET=your_session_secret_change_this_in_production
